generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int         @id @default(autoincrement())
  name       String
  age        Int
  dob        DateTime
  email      String      @unique
  info       String?
  user_books UserBooks[]
}

model Books {
  id        Int         @id @default(autoincrement())
  name      String
  UserBooks UserBooks[]
}

model UserBooks {
  user_id  Int
  books_id Int
  books    Books @relation(fields: [books_id], references: [id])
  user     User  @relation(fields: [user_id], references: [id])

  @@id([user_id, books_id])
  @@unique([user_id, books_id])
}

model userEmail {
  id        Int      @id @default(autoincrement())
  email     String
  createdAt DateTime @default(now())
}